<div class="row">
  <h1>Yegfilm Listings</h1>
</div>
<div class="row">

    <% @profiles.each do |profile| %>
      <div class="small-12 medium-4 large-3 columns">
        <div class="card">
          <p>
          <% if profile.availability == true %>
            Yes, I am currently available for projects
          <% else %>
            No, I am not currently available for projects
          <% end %>

        </p>
        <h3><%= profile.name %></h3>
        <p><%= profile.description %></p>
        <%= link_to 'Show', profile, :class=> 'button tiny round' %>
      </div>
    </div>
    <% end %>

</div>
<br>
<div class="row">
  <div class="small-12 columns">
    <%= link_to 'New Profile', new_profile_path , :class=> 'button' %>
  </div>
</div>