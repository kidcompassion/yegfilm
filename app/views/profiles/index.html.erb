    <button data-filter="*">show all</button>
    <button data-filter=".camera"></button>
    <button data-filter=".sound">Sound</button>
    <button data-filter=".writing">Writing</button>
    <button data-filter=".animation">Animation</button>
    <button data-filter=".acting">Acting</button>
    <button data-filter=".lighting">Lighting</button>
