  <div id="container" class="js-masonry row">
    <% @profiles.each do |profile| %>
        <div class="small-12 medium-3 large-4 columns item card <% if profile.editing == true %>editing <%else%> camera<% end %>">
          <p>
          <% if profile.availability == true %>
            <span class="green"><i class="fa fa-check-circle"></i> Yes, I am currently available for projects</span>
          <% else %>
            <span class="red"><i class="fa fa-times-circle"></i> No, I am not currently available for projects</spa>
          <% end %>

        </p>
        <h3><%= profile.name %></h3>
        <p><%= profile.description %></p>
        <%= link_to 'Show', profile, :class=> 'button tiny round' %>
    </div>
    <% end %>
</div>
